<div class="row">
    {{#each cars}}
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">
                        {{title}}    
                    </h4>
                    <p>{{description}}</p>
                    <FONT SIZE=1>
                        <a href="/coches/edit/{{_id}}" class="btn btn-info btn-block btn-sm">Edit</a>
                        <form action="/coches/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-danger btn-block btn-sn" type="submit">
                            Delete
                        </button>
                        </form>
                    </FONT>
                </div>
            </div>
        </div>
        {{else}}
            <div class="card mx-auto">
                <div class="card-body">
                    <p class="lead">No hay posts todavia</p>
                    <a href="/coches/add" class="btn btn-secondary btn-block">Crea una</a>
                </div>
            </div>
    {{/each}}
</div>